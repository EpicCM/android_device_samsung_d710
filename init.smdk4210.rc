    chmod 0664 /sys/class/sec/gps/GPS_PWR_EN/value
    chown root root /sys/class/sec/gps/GPS_nRST/value
    chmod 0664 /sys/class/sec/gps/GPS_nRST/value
    mkdir /data/gps 771 system system
    chown system system /data/gps

